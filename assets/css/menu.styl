normalize()

grey = #333
green = #66cc33
white = #fff
black = #000

@import url('http://fonts.googleapis.com/css?family=Noto+Sans:400,700')

*
  margin 0
  padding 0

html, body
  width 100%
  height 100%

body
  font-family 'Noto Sans', sans-serif
  color grey
  background-color white

#mainCanvas
  display block

.img
  width 32px
  text-decoration none
  rounded()

#media
  li
    margin 5px
    display inline-block
    
    svg
      display block
      width 32px
      height 32px
    svg g > *, svg > *
      fill black
    #g:hover g > *
      fill #FF3333
    #fb:hover svg > *
      fill #3B5998
    #t:hover svg > *
      fill #33CCFF
    #gh:hover svg > *
      fill #666
    #ln:hover g > *
      fill #4875B4  
