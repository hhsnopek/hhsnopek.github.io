normalize()

grey = #333
blue = #A0E3FC
green = #66cc33
black = #000
white = #fff
yellow = #ffd500
brown = #97694F
light-brown = #C28F72
dark-brown = #654635
bodyColor = brown
eyeColor = brown
pupilColor = brown
legColor = brown
footColor = brown
