@font-face
  font-family 'UbuntuRegular'
  src url('Ubuntu-R-webfont.eot')
  src url('Ubuntu-R-webfont.eot?#iefix') format('embedded-opentype'),
         url('Ubuntu-R-webfont.woff') format('woff'),
         url('Ubuntu-R-webfont.ttf') format('truetype'),
         url('Ubuntu-R-webfont.svg#UbuntuRegular') format('svg')
  font-weight normal
  font-style normal
  font-family 'CabinRegular'
  src url('Cabin-Regular-webfont.eot')
  src url('Cabin-Regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('Cabin-Regular-webfont.woff') format('woff'),
         url('Cabin-Regular-webfont.ttf') format('truetype'),
         url('Cabin-Regular-webfont.svg#CabinRegular') format('svg')
  font-weight normal
  font-style normal

h1, h2, h5, nav
  font-family UbuntuRegular
  margin auto

h1
  position relative
  z-index 2
  text-align center
  font-size 64px
  color #DEDEDE
  margin-top 20%

h2
  position absolute
  z-index 1
  font-size 400px
  color #DB4342
  margin-top -200px
  margin-left 200px

h5
  text-align left
  font-size 18px
  color #E41919
  margin-top 3em
  margin-top 0
  font-family 'CabinRegular'
  font-size 17px
  color inherit
  text-decoration underline

nav
  position absolute
  z-index 2
  margin 0
  height auto
  text-align center
  margin-left -20px
  li
    list-style-type none
    display inline
    a
      -webkit-transition-property background-color
      -webkit-transition-duration .5s
      -webkit-transition-timing-function ease
      transition-property background-color
      transition-duration .5s
      transition-timing-function ease
      padding 8px 15px
      text-decoration none
      font-weight bold
      color #333333
      background-color transparent
      &:hover
        color #FFFFFF
        background-color #BD1311
  a
    display inline-block
  ul
    ul
      display none
      width auto
      position absolute
      margin 0
      font-size 14px
      li
        a
          float none
          position relative
        & > a
          &:hover
            color #FFFFFF
            background-color #BD1311
    li
      &:hover
        & > ul
          margin-top 5em
          display block
          padding-top 10px
          left 30%

img
  margin 5px
  border 1px solid black
  border-radius 6px 6px 6px 6px
  position relative

h3
  margin-top 0
  font-family 'UbuntuRegular'
  font-size 40px
  font-style normal
  font-weight bold
  text-align left
  padding-bottom 4px
  border-bottom 1px dashed black
  padding-left 30px
  padding-top 20px
  background-color #BD1311

th
  margin-top 0
  font-family 'CabinRegular'
  font-size 17px
  color inherit
  text-decoration underline

article
  font-family 'CabinRegular'
  text-align left
  font-style normal
  font-weight normal
  font-size 16px
  background-color #333333
  background transparent
  border-bottom 2px solid black
  padding-left 10px
  padding-right 10px

footer
  color #333333
  margin auto auto auto auto
  width 800px
  background-color #AEA79F
  background-position center center
  background none repeat scroll 0 0 #999999
  height auto

#menu
  vertical-align middle
  width 100%

#backgroundMenu
  position relative
  z-index 3
  background-color #D33534

#subNavUnderline
  border-left 1px solid #999999
  color #FFFFFF !important
  padding-left 5px

.articleImportant
  margin-top 0
  font-family 'UbuntuRegular'
  font-size 40px
  font-style normal
  font-weight bold
  text-align left
  padding-bottom 4px
  border-bottom 1px dashed black
  padding-left 30px
  padding-top 20px
  background-color #77216F
  color #FFFFFF

.container
  display none
  z-index 2
  color #333333
  margin-top 300px
  margin-left 300px
  width 800px
  background-position center center
  background #fff
  height auto

.pSmall
  font-size 14px
  color inherit

