normalize()

@font-face
  font-family 'Open Sans light'
  src url('/fonts/OpenSanslight.woff')

body
  font-family Open Sans light, sans-serif
  background url('/img/purpleshape.jpg') repeat fixed
  color #fff

img
  border #000 solid 1px
  border-radius 10px
  max-width 20%

#about
  img
    display inline-block
    margin-left 18%
  p
    display inline-block
    max-width 90%

#container
  z-index 3
  margin auto
  margin-top 5%
  max-height 500px
  position relative

#resume
  .section
    margin-top 5%


.section
  height 30%
  margin-top 12%
  padding-left 25%
  padding-top 5%
  padding-bottom 5%
  background #272727
  ul
    max-width 480px

@media screen and (width: 360px)
  img
    min-width 30%

  .section
    font-size 13px
    padding-left 10%
    height 20%
