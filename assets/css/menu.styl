//@import url('http://fonts.googleapis.com/css?family=Noto+Sans:400,700')
@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300')

bodyHeight = 1.25em
bodyWidth = bodyHeight
bodyBorder = (bodyHeight/10)


*
  margin 0
  padding 0

html, body
  width 100%
  height 100%

body
  font-family 'Noto Sans', sans-serif
  color white
  overflow-y hidden
  background-image: -ms-linear-gradient(bottom, #FFFFFF 0%, #DBFCFC 20%, #A0E3FC 60%, #4C99B5 100%);
  background-image: -moz-linear-gradient(bottom, #FFFFFF 0%, #DBFCFC 20%, #A0E3FC 60%, #4C99B5 100%);
  background-image: -o-linear-gradient(bottom, #FFFFFF 0%, #DBFCFC 20%, #A0E3FC 60%, #4C99B5 100%);
  background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, #FFFFFF), color-stop(0.2, #DBFCFC), color-stop(0.6, #A0E3FC), color-stop(1, #4C99B5));

  // starry night
  &:before
    content ""
    background-color transparent
    position absolute
    border-radius 3px
    top 50%
    left 50%
    margin-top -2px
    margin-left -2px
    width 4px
    height 4px
    z-index 10
    box-shadow 80px 140px white, -120px -60px white, 70px -40px white, 300px 90px white, 100px -80px white, -220px 60px white, 320px 120px white, -410px 90px white, -20px 220px white, 120px -220px white, 70px -445px white, 400px -360px white, -500px -250px white, -190px -220px white, 480px -150px white, -350px -400px white, 550px -420px white, -75px -370px white


// document loaded animation
.loaded
  header, #name
    opacity 0

    -webkit-animation: appear 2s linear;
    -moz-animation:    appear 2s linear;
    -o-animation:      appear 2s linear;
    animation:         appear 2s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
  
  #owl
    top -5em
    -webkit-animation: owlFlight 2s linear;
    -moz-animation:    owlFlight 2s linear;
    -o-animation:      owlFlight 2s linear;
    animation:         owlFlight 2s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

// navigation
#navbar
  position absolute
  top 3em
  right 10%
  ul
    display inline-block
    opacity 0
    -webkit-transition: all .5s ease-in;
    -moz-transition:    all .5s ease-in;
    -o-transition:      all .5s ease-in;
    transition:         all .5s ease-in;
  ul.activeMenu
    opacity 1
  li
    font-size 1.25em
    display inline-block
    margin-left .5em
    margin-right .5em
    a
      reset-link()
  li:hover
    a
      border-bottom 3px solid white


// navigation icon
#navicon
  display inline-block
  margin-bottom -23px
  width 30px
  height 30px

  .bar
    width 35px
    height 3px
    background-color white
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);

  .bar:nth-of-type(2)
    margin-top -20px

  .bar:nth-of-type(3)
    margin-top 32px

#navicon.active
  .bar:nth-of-type(1)
    -webkit-animation: dissappear .5s linear;
    -moz-animation:    dissappear .5s linear;
    -o-animation:      dissappear .5s linear;
    animation:         dissappear .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

  .bar:nth-of-type(2)
    -webkit-animation: squishTop .5s linear;
    -moz-animation:    squishTop .5s linear;
    -o-animation:      squishTop .5s linear;
    animation:         squishTop .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

  .bar:nth-of-type(3)
    -webkit-animation: squishBottom .5s linear;
    -moz-animation:    squishBottom .5s linear;
    -o-animation:      squishBottom .5s linear;
    animation:         squishBottom .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

#navicon.inactive
  .bar:nth-of-type(1)
    -webkit-animation: dissappearRev .5s linear;
    -moz-animation:    dissappearRev .5s linear;
    -o-animation:      dissappearRev .5s linear;
    animation:         dissappearRev .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

  .bar:nth-of-type(2)
    -webkit-animation: squishTopRev .5s linear;
    -moz-animation:    squishTopRev .5s linear;
    -o-animation:      squishTopRev .5s linear;
    animation:         squishTopRev .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

  .bar:nth-of-type(3)
    -webkit-animation: squishBottomRev .5s linear;
    -moz-animation:    squishBottomRev .5s linear;
    -o-animation:      squishBottomRev .5s linear;
    animation:         squishBottomRev .5s linear;
    -webkit-animation-fill-mode: forwards;
    -mox-animation-fill-mode: forwards;
    -o-animation-fill-mode: forwards;
    animation-fill-mode: forwards;


// owl
#owlContainer
  font-size 3.5em
  text-align center
  color white
  h1
    top 1.28em
    position relative
    z-index 4
    font-family 'Open Sans', sans-serif
    font-weight 300
  
#owl
  position absolute
  left 47.6%
  top 3em

  #body
    height bodyHeight
    width bodyWidth
    border bodyBorder solid bodyColor
    color lightblue
    border-radius 50px 50px 5px
    transform rotate(45deg)
    
  .eye
    width (bodyHeight/4)
    height (bodyWidth/4)
    border (bodyBorder/2) solid eyeColor
    border-radius 2em

  .pupil
    height (bodyHeight/10)
    width (bodyWidth/10)
    background-color pupilColor
    border-radius 9999em
    
  #eye1
    .eye
      position absolute
      top (bodyHeight/4)
      left (bodyWidth/3.7)
    .pupil
      position absolute
      top (bodyHeight/2.5)
      left (bodyWidth/2.4)

  #eye2
    .eye
      position absolute
      top (bodyHeight/4)
      right (bodyWidth/3.7)
      border-color light-brown
    .pupil
      position absolute
      top (bodyHeight/2.5)
      right (bodyWidth/2.4)

  #beak
    position absolute
    top (bodyWidth/2.05)
    left (bodyWidth/1.95)
  .beak
    position relative
    z-index -1
    height (bodyHeight/8)
    width (bodyWidth/8)
    background-color grey
    border-left (bodyBorder/2) solid grey
    border-bottom (bodyBorder/2) solid grey
    transform rotate(-45deg)

  .feather
    height (bodyHeight/8)
    width (bodyWidth/8)
    border-left (bodyBorder/2) solid featherColor
    border-bottom (bodyBorder/2) solid featherColor
    transform rotate(-45deg)

  #row1
    .feather
      position absolute
      border-color brown
      top (bodyHeight/1.2)
      left (bodyWidth/2)

  #row2
    position relative
    z-index 2
    .feather
      border-color dark-brown
    #feather1
      position absolute
      top -(bodyHeight/2.35)
      left (bodyWidth/2.6)
        
    #feather2
      .feather
        position absolute
        top -(bodyHeight/2.35)
        right (bodyWidth/2.6)
      .feather
        border-color light-brown

  #legs
    .joint, .toe, .leg
      position relative
      z-index 9999
      height (bodyHeight/8)
      width (bodyWidth/20)
      background-color #ffcc33
      border-radius 1em
    .leg
      height (bodyHeight/4)
    .joint
      background-color #ffee00
    .toe
      background-color #ffee00

    #left
      position absolute
      top 1.3em
      left .5em
      .leg
        transform rotate(45deg)
      #lefttoe
        position absolute
        top .25em
        left -.15em
        .joint
          transform rotate(30deg)
        .toe
          transform rotate(-5deg)
          margin-top -.04em
          margin-left -.03em
      #middletoe
        position absolute
        top .27em
        left -.075em
        .joint
          transform rotate(0deg)
        .toe
          margin-top -.04em
          transform rotate(-10deg)
      #righttoe
        position absolute
        top .24em
        left -0.01em
        .joint
          transform rotate(-30deg)
        .toe
          margin-top -.03em
          margin-left .03em
          transform rotate(3deg)

    #right
      position absolute
      top 1.3em
      right .5em
      .leg
        transform rotate(-45deg)
      #lefttoe
        position absolute
        top .24em
        right -.18em
        .joint
          transform rotate(-35deg)
        .toe
          transform rotate(5deg)
          margin-top -.04em
          margin-left .03em
      #middletoe
        position absolute
        top .27em
        right -.09em
        .joint
          transform rotate(0deg)
        .toe
          margin-top -.04em
          transform rotate(10deg)
      #righttoe
        position absolute
        top .25em
        left .02em
        .joint
          transform rotate(30deg)
        .toe
          margin-top -.03em
          margin-left -.03em
          transform rotate(-5deg)
  #wings
    .folded
      position relative
      z-index 5
      height (bodyHeight/5)
      width (bodyWidth/20)
      border (bodyBorder) solid brown
      background-color brown


    #wing1
      position absolute
      top .65em
      left .12em
      .folded, .design
        transform rotate(-20deg)
        border-left none
        border-radius 100% / 50%
        border-top-left-radius 0
        border-bottom-left-radius 0

    #wing2
      position absolute
      top .65em
      right .12em
      .folded, .design
        transform rotate(20deg)
        border-right none
        border-radius 100% / 50%
        border-top-right-radius 0
        border-bottom-right-radius 0

#branch
  display none
  position absolute
  top 4.6em
  width 100%
  height .15em
  background-color light-brown


main
  display none

//
// navicon key frames
//
@keyframes squishBottom {
  0% {
    margin-top 32px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  50% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  75% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    margin-top -3px
    -webkit-transform: rotate(-135deg);
    -moz-transform: rotate(-135deg);
    -o-transform: rotate(-135deg);
    transform: rotate(-135deg);  
  }
}

@keyframes squishTop {
  0% {
    margin-top -20px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  50% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  75% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    margin-top -3px
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);  
  }
}

@keyframes dissappear {
  0% {
    opacity 1
  }
  50% {
    opacity 1
  }
  65% {
    opacity 0
  }
  100% {
    opacity 0
  }
}

@keyframes squishBottomRev {
  0% {
    margin-top -3px
    -webkit-transform: rotate(-135deg);
    -moz-transform: rotate(-135deg);
    -o-transform: rotate(-135deg);
    transform: rotate(-135deg);  
  }
  50% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  75% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    margin-top 32px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
}

@keyframes squishTopRev {
  0% {
    margin-top -3px
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);  
  }
  50% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  75% {
    margin-top -3px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    margin-top -20px
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
}

@keyframes dissappearRev {
  0% {
    opacity 0
  }
  
  50% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

//
// loaded keyframes
//

@keyframes appear {
  0% {
    opacity 0
  }
  80% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

@keyframes owlFlight {
  0% {
    top -9em
  }
  10% {
    top -3em
  }
  100% {
    top 3em
  }
}

