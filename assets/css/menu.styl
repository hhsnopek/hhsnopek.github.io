@font-face
  font-family 'UbuntuRegular'
  src url('Ubuntu-R-webfont.eot')
  src url('Ubuntu-R-webfont.eot?#iefix') format('embedded-opentype'),
         url('Ubuntu-R-webfont.woff') format('woff'),
         url('Ubuntu-R-webfont.ttf') format('truetype'),
         url('Ubuntu-R-webfont.svg#UbuntuRegular') format('svg')
  font-weight normal
  font-style normal
  font-family 'CabinRegular'
  src url('Cabin-Regular-webfont.eot')
  src url('Cabin-Regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('Cabin-Regular-webfont.woff') format('woff'),
         url('Cabin-Regular-webfont.ttf') format('truetype'),
         url('Cabin-Regular-webfont.svg#CabinRegular') format('svg')
  font-weight normal
  font-style normal

html, body
  margin 0

body
  background-color #D33534

h1, h2, h5, nav
  font-family UbuntuRegular
  margin auto

#menu
  margin-bottom 200px

#Banner
  width 100%
  overflow hidden
  position relative

  h1
    font-size 64px
    margin-top -150px

  h2
    font-size 200px
    margin-left 60px

  @media screen and (min-device-width: 800px)
    h1
      text-align center
      font-size 64px
      color #DEDEDE
      margin-top -260px
      
    h2
      font-size 400px
      z-index -1
      color #DB4342

h5
  text-align left
  font-size 18px
  color #E41919
  margin-top 3em
  margin-top 0
  font-family 'CabinRegular'
  font-size 17px
  color inherit
  text-decoration underline

nav
  z-index 2
  margin 0
  height auto
  text-align center
  margin-left -20px
  li
    list-style-type none
    display inline
    a
      transition-property background-color
      transition-duration .5s
      transition-timing-function ease
      padding 8px 15px
      text-decoration none
      font-weight bold
      color #333333
      background-color transparent

      &:hover
        color #FFFFFF
        background-color #BD1311
  a
    display inline-block
  ul
    ul
      display none
      width auto
      position absolute
      margin 0
      font-size 14px
      li
        a
          float none
          position relative
        & > a
          &:hover
            color #FFFFFF
            background-color #BD1311
    li
      &:hover
        & > ul
          margin-top 5em
          display block
          padding-top 10px
          left 30%

section.container
  margin-left 10px
  margin-right 10px

img
  margin 5px
  border 1px solid black
  border-radius 6px 6px 6px 6px
  position relative

h3
  margin-top 0
  font-family 'UbuntuRegular'
  font-size 40px
  font-style normal
  font-weight bold
  text-align left
  padding-bottom 4px
  border-bottom 1px dashed black
  padding-left 30px
  padding-top 20px
  background-color #BD1311
  color: #fff

th
  margin-top 0
  font-family 'CabinRegular'
  font-size 17px
  color inherit
  text-decoration underline

article
  font-family 'CabinRegular'
  text-align left
  font-style normal
  font-weight normal
  font-size 16px
  background-color #333333
  background transparent
  border-bottom 2px solid black
  padding-left 10px
  padding-right 10px
