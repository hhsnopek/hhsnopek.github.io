@import _settings

*
  margin 0
  padding 0
  border-box()

html, body
  width 100%
  height 100%

body
  color grey

  .sidebar
    background-color blue
    height 100%
    span(1/4)

    *
      font-family 'Noto Sans' sans-serif
      font-weight 400
      color white

    #profile
      margin 0 unit(font-size*.5, px) 0 unit(font-size*.5, px)
      text-align center

    #name
      a
        font-weight 700
      a:hover
        color white

    #pic
      width 100px
      height 100px
      border-radius 100px

    #location
      *
        display inline-block
        vertical-align center

      svg
        width 32px
        height 32px
        margin-bottom -8px
      svg g > *, svg > *
        fill #fff

    #short
      display block

    #media
      li
        margin 5px
        inline-block()

        svg
          display block
          width 32px
          height 32px
        svg g > *, svg > *
          fill #fff
          transition fill .25s ease-in-out

      li:hover
        svg
          *
            fill #34495e


    +above(1150px)
      span(1/4)

    +between(680px, 1150px)
      span(1/3)

    +between(400px, 680px)
      height auto
      stack()

    +below(400px)
      height auto
      stack()

  .main
    background-color #fff
    height 100%
    box-shadow inset 2px 0px 5px -2px #888
    overflow-y scroll

    *
      font-family 'Aileron' sans-serif
      font-weight 300

    #container
      padding-bottom 5%
      center(90%)

      #Blog
        .item
          reset-list()
        .post
          display none
          li
            margin-left 2.5em
        .title
          margin-bottom 0

    +above(1150px)
      span(3/4)
      #container
        center(70%)
        img
          max-width 100%

    +between(680px, 1150px)
      span(2/3)

    +between(400px, 680px)
      stack()
      overflow-y visible

    +below(400px)
      stack()
      overflow-y visible

headers()
text-selection()
lists()
.date
  color lighten(grey, 30)
a
  text-decoration none
  transition color .25s ease-in-out
  color blue
a:hover
  color #34495e
p
  paragraph()
blockquote
  blockquo()
code
  padding 0 .25em 0 .25em
  background-color #F5F5F5
  border 1px solid #E1E1E8
  border-radius 3px
pre
  $pre()
  code
    background-color inherit
    padding 0
    border 0
    border-radius 0
