
@import _settings

normalize()


*
  margin 0
  padding 0
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  color grey

  .sidebar
    background-color #e74c3c //#2980b9
    span(1/4)
    height 100%

    *
      font-family 'Noto Sans' sans-serif
      font-weight 400
      color white

    #short
      text-align center

    +tablet()
      span(1/3)

    +mobile()
      height auto
      stack()

  .main
    background-color #fff
    height 100%
    box-shadow inset 3px 0px 5px -2px #888
    span(3/4)

    *
      font-family 'Aileron' sans-serif
      font-weight 300

    #container
      width 90%
      center()

    +tablet
      span(2/3)

    +mobile
      stack()


.sidebar
  display block

#index
  #latest
    display block

#Blog
  display none
  .post
    display none

#Projects
  display none
  .project
    display none

