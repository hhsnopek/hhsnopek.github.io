header
  width 100%
  text-align: center

  img
    width: 100px
    height: 100px
    border-radius: 50%
    padding: 25px

    +below(600px)
      width: 80px
      height: 80px
      padding: 20px

  h1
    margin: 0

  h2
    padding: 0 1em

    +below(600px)
      display: none

  h1, h2
    color: light-gray
    font-size: 1.45em

nav
  text-align: center
  margin: 2em 0

  ul
    padding: 0
    width: 60%
    margin-left:  50%
    transform: translate(-50%, 0)

    &:before, &:after
      display: block
      content: ""
      height: 1px
      background: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1), transparent)

    li
      display: inline-block
      list-style: none
      padding: .5em 1em
      font-size: 1.15em

      a
        text-decoration: none

    +below(450px)
      width: 85%
