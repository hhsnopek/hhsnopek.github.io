.sidebar
  height 100%
  span(1/4)

  *
    font-family 'Born' sans-serif
    font-weight 400
    color grey

  a:hover
    color blue

  #profile
    margin 0 unit(font-size*.5, px) 0 unit(font-size*.5, px)
    text-align center

  #name
    margin-top 0
    a
      font-weight 700

  #pic
    width 200px
    height 200px
    border-radius 100px

  #location
    h3
      margin-bottom 0
    *
      display inline-block
      vertical-align center

    svg
      width 32px
      height 32px
      margin-bottom -8px
    svg g > *, svg > *
      fill #ff3333

  #short
    display block
    font-size 1.15em

  #job
    a
      color light-blue

      &:hover
        color black

  #media
    li
      margin 5px
      inline-block()

      svg
        display block
        width 32px
        height 32px
      svg g > *, svg > *
        fill grey
        transition fill .25s ease-in-out

    li:hover
      svg
        *
          fill light-blue

  +above(1150px)
    span(1/4)


  +between(800px, 1150px)
    span(1/3)

  +above(800px)
    display table
    #profile
      display table-cell
      vertical-align middle

  +below(800px)
    stack()
    height auto
    padding-top 1.25em
    padding-bottom 1.25em
